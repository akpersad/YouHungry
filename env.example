# ============================================
# Application Configuration
# ============================================

# Application URL (used for URL shortening, email links, and SMS notifications)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================

# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/

# MongoDB database name
MONGODB_DATABASE=you-hungry

# ============================================
# Authentication (Clerk)
# ============================================

# Clerk publishable key (client-side)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# Clerk secret key (server-side)
CLERK_SECRET_KEY=sk_test_...

# Clerk webhook secret (for validating webhook signatures)
CLERK_WEBHOOK_SECRET=whsec_...

# ============================================
# Google APIs
# ============================================

# Google Places API key (server-side)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Google Places API key (client-side for map view)
NEXT_PUBLIC_GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Google Address Validation API key
GOOGLE_ADDRESS_VALIDATION_API_KEY=your-google-address-validation-api-key

# ============================================
# SMS Notifications (Twilio)
# ============================================

# Twilio account SID
TWILIO_ACCOUNT_SID=your-twilio-account-sid

# Twilio auth token
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# Twilio phone number (sender)
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Twilio messaging service SID
TWILIO_MESSAGING_SERVICE_SID=your-twilio-messaging-service-sid

# Twilio verify service SID (for phone verification)
TWILIO_VERIFY_SERVICE_SID=your-twilio-verify-service-sid

# Twilio destination phone number (for development/testing only)
TWILIO_TO_PHONE_NUMBER=+1234567890

# ============================================
# Email Service (Resend)
# ============================================

# Resend API key
RESEND_API_KEY=your-resend-api-key

# From email address (for sending notifications)
FROM_EMAIL=noreply@yourdomain.com

# ============================================
# Vercel Cron Jobs
# ============================================

# Secret for authenticating Vercel cron job requests
# Generate using: openssl rand -base64 32
CRON_SECRET=your-secure-random-string-here

# Internal API secret for service-to-service authentication
# Generate using: openssl rand -base64 32
INTERNAL_API_SECRET=your-internal-api-secret-here

# ============================================
# Admin Configuration
# ============================================

# Admin user IDs (comma-separated MongoDB user IDs)
# Example: 68d9b010a25dec569c34c111,68d9ae3528a9bab6c334d9f9
ADMIN_USER_IDS=your-mongodb-user-id-here

# ============================================
# Development & Debugging (Optional)
# ============================================

# Enable console logging in production (default: false)
# ENABLE_CONSOLE_LOGS=true

# Enable bundle analysis (default: false)
# ANALYZE=true

# Skip ESLint errors during builds (default: false)
# ESLINT_NO_DEV_ERRORS=true
