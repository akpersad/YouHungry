{
  "name": "forkintheroad",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "node scripts/check-server.js 3000 && next dev --turbopack",
    "dev:https": "next dev --turbopack --experimental-https --experimental-https-key ./public/cert-key.pem --experimental-https-cert ./public/cert.pem",
    "dev:force": "next dev --turbopack",
    "dev:fix": "node scripts/fix-server-actions.js && npm run dev",
    "dev:kill": "lsof -ti:3000 | xargs kill -9",
    "build": "next build --turbopack",
    "build:webpack": "next build",
    "analyze": "ANALYZE=true npm run build",
    "type-check": "tsc",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:fast": "playwright test --project=chromium-fast --project=mobile-chrome-fast",
    "test:e2e:slow": "playwright test --project=chromium-slow",
    "test:e2e:perf": "playwright test e2e/performance/",
    "test:e2e:chromium": "playwright test --project=chromium-fast --project=chromium-slow --project=auth-tests",
    "test:e2e:mobile": "playwright test --project=mobile-chrome-fast",
    "test:e2e:all": "RUN_ALL_BROWSERS=true playwright test",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:no-auth": "playwright test --config=playwright.config.no-auth.ts",
    "test:e2e:debug-auth": "playwright test e2e/auth.setup.ts --headed --debug",
    "test:accessibility": "playwright test e2e/accessibility.spec.ts",
    "test:performance": "playwright test e2e/performance/",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "lhci collect",
    "lighthouse:assert": "lhci assert",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "npm run type-check && npm run lint && npm run test && npm run build",
    "perf:collect": "node performance-metrics/collect-metrics.js",
    "perf:compare": "node performance-metrics/compare-metrics.js",
    "perf:dashboard": "node performance-metrics/dashboard.js",
    "perf:all": "npm run perf:collect && npm run perf:dashboard",
    "perf:morning": "npm run perf:all && npm run perf:compare",
    "logs:replace": "node scripts/replace-console-logs.js",
    "logs:clean": "npm run logs:replace && npm run lint:fix",
    "check-colors": "node scripts/comprehensive-contrast-audit.js",
    "fix-colors": "node scripts/comprehensive-fix-contrast-issues.js",
    "lint-colors": "npx eslint src --ext .ts,.tsx --rule \"no-hardcoded-colors: error\"",
    "prod": "node scripts/run-production.js all",
    "prod:build": "node scripts/run-production.js build",
    "prod:start": "node scripts/run-production.js start"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.32.2",
    "@googlemaps/js-api-loader": "^2.0.1",
    "@googlemaps/markerclusterer": "^2.6.2",
    "@googlemaps/react-wrapper": "^1.2.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^5.2.2",
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@vercel/analytics": "^1.5.0",
    "@vercel/blob": "^2.0.0",
    "@vercel/speed-insights": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "framer-motion": "^12.23.22",
    "lucide-react": "^0.544.0",
    "mongodb": "^6.20.0",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "sonner": "^2.0.7",
    "svix": "^1.76.1",
    "tailwind-merge": "^3.3.1",
    "twilio": "^5.10.2",
    "web-push": "^3.6.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.4",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/google.maps": "^3.58.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/web-push": "^3.6.4",
    "chrome-launcher": "^1.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "glob": "^11.0.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^15.2.11",
    "prettier": "^3.4.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
